<%- include('partials/header') -%>
<div class="container">
  <h1>Profile</h1>
  <a href="/createPost" class="col-3 btn btn-primary">Create</a>
  <div class="row mt-5">
      <div class="col-12">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-4 justify-content-between mt-5 border border-dark">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid justify-content-center" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary col-2" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>