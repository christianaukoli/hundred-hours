<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5 col-2 ">
      <a class="btn btn-primary" href="/profile">Profile</a>
    </div> 
    <h1>Feed/Landing Page</h1>
    <div class="row justify-content-center mt-5 border border-dark col-12">
      <ul class="row list-unstyled col-6 d-flex justify-content-center">
        <% for(var i=0; i<posts.length; i++) {%>
          <div class="card border border-dark mb-3" style="width: 25rem;"> <!--cards/borders-->
          <li class="col-12 mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <!--is img class where to adjust image size?-->
              <img class="card-img-top" src="<%= posts[i].image%>"> 
            </a>
          </li>
          <i class="fa-solid fa-fire-flame-curved fa-2xl mt-4
          d-flex justify-content-end"></i>
          <div class="card-body">
            <h4 class="card-text text-center"><%= posts[i].title%></h4>
          </div>
        </div>
        <% } %>
      </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>